<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/img_item_group_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_single_avatar"/>

    <TextView
        android:id="@+id/tv_item_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_item_group_avatar"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/img_item_group_avatar"
        android:text="西湖区队长-张亮"
        android:textColor="@color/text_grey_deep_2"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_item_group_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_group_name"
        android:layout_below="@+id/tv_item_group_name"
        android:layout_marginTop="5dp"
        android:text="编号:4776688900233"
        android:textColor="@color/text_grey"
        android:textSize="12sp"/>

    <CheckBox
        android:id="@+id/cb_item_group"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>
